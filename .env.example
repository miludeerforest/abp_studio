# =============================================
# Banana Product - Environment Configuration
# Copy this file to .env and fill in your values
# =============================================

# ========== Database Configuration ==========
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
# Example: postgresql://banana_user:securepass123@postgres:5432/banana_db
DATABASE_URL=postgresql://user:password@hostname:5432/database_name

# ========== JWT Secret (CRITICAL) ==========
# Used for signing authentication tokens
# MUST change in production! Generate a random 32+ character string
# Example: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-this-in-production

# ========== Admin User ==========
# Initial admin account created on first startup
# Subsequent startups will NOT overwrite the password unless FORCE_RESET_ADMIN_PASSWORD=true
ADMIN_USER=admin
ADMIN_PASSWORD=your_secure_password_here

# Force reset admin password to the value of ADMIN_PASSWORD on startup
# WARNING: Set to false (or remove) after reset to prevent accidental overwrites
FORCE_RESET_ADMIN_PASSWORD=false

# ========== Redis Configuration ==========
# Required for task queue and real-time updates
# If using external Redis (e.g., 1Panel managed), use container name
# Code will automatically resolve container name to IP
REDIS_HOST=redis_container_name
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# ========== API Configuration ==========
# These can also be configured via the web UI (Settings page)
# Environment variables are used as defaults if not set in UI

# --- Text/Image Generation API ---
# OpenAI-compatible API endpoint for image generation
# Supports: Gemini, OpenAI, Claude, or any compatible proxy
DEFAULT_API_URL=https://your-api-provider.com/v1
DEFAULT_API_KEY=sk-your-api-key-here
# Model name for image generation (must support image output)
DEFAULT_MODEL_NAME=gemini-2.0-flash-exp

# --- Video Generation API ---
# API endpoint for video generation (Sora, Veo, etc.)
VIDEO_API_URL=https://your-video-api.com/v1
VIDEO_API_KEY=sk-your-video-api-key-here
# Model name for video generation
VIDEO_MODEL_NAME=sora2-portrait-15s

# ========== Optional Configuration ==========

# --- Cleanup Settings ---
# Hours to keep temporary files before cleanup (default: 168 = 7 days)
# Completed videos and merged videos are excluded from cleanup
# CLEANUP_HOURS=168

# --- Gemini Specific (if using Gemini API directly) ---
# GEMINI_TEXT_MODEL=gemini-2.0-flash-exp
# VERTEX_VEO_MODEL=veo-2.0-generate-001
