# =============================================
# Banana Product - Environment Configuration
# Copy this file to .env and fill in your values
# =============================================

# ========== Database Configuration ==========
DATABASE_URL=postgresql://user:password@hostname:5432/database_name

# ========== JWT Secret (IMPORTANT) ==========
# Generate a strong random key for production
SECRET_KEY=your-secret-key-change-this-in-production

# ========== Admin User ==========
ADMIN_USER=admin
ADMIN_PASSWORD=your_secure_password_here

# ========== Redis Configuration ==========
# External Redis (if using 1Panel or other external Redis)
REDIS_HOST=redis_container_name
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# ========== API Keys (Optional - can be set in UI) ==========
# Text/Image Generation
DEFAULT_API_URL=https://your-api-provider.com/v1
DEFAULT_API_KEY=sk-your-api-key-here
DEFAULT_MODEL_NAME=gemini-3-pro-image-preview

# Video Generation
VIDEO_API_URL=https://your-video-api.com/v1
VIDEO_API_KEY=sk-your-video-api-key-here
VIDEO_MODEL_NAME=sora-video-portrait
